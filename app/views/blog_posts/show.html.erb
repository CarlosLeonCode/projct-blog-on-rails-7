<div
  class="relative block overflow-hidden rounded-lg border border-gray-100 p-4 sm:p-6 lg:p-8 shadow"
>
  <div class="my-2">
    <h5 class="text-sm text-gray-500">Title</h5>
    <h3 class="text-xl"><%= @blog_post.title %></h3>
  </div>

  <div class="my-2 mt-4">
    <h5 class="text-sm text-gray-500">Content</h5>
    <div class="text-xl"><%= @blog_post.content %></div>
  </div>


  <div class="mt-3">
    <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "block bg-blue-300 px-5 py-3 text-center text-xs font-bold uppercase transition hover:bg-blue-400 rounded mt-6 w-full text-white" %>
    <%= link_to "Back", root_path, class: "block border-blue-100 border-2 px-5 py-3 text-center text-xs font-bold uppercase transition hover:bg-blue-100 rounded mt-2 text-blue-500" %>
  </div>
</div>

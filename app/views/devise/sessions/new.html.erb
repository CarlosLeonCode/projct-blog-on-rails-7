<div
  class="relative block overflow-hidden rounded-lg border border-gray-100 p-4 sm:p-6 lg:p-8 shadow"
>
  <h2 class="text-sm text-gray-700">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do
  |f| %>
  <div class="my-3">
    <%= f.label :email, class: "text-sm text-gray-500" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded w-full" %>
  </div>

  <div class="my-3">
    <%= f.label :password, class: "text-sm text-gray-500" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "rounded w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "block bg-blue-300 px-5 py-3 text-center
    text-xs font-bold uppercase transition hover:bg-blue-400 rounded mt-6 w-full text-white" %>
  </div>
  <% end %>
</div>
